{
  "name": "web-wizardry",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "concurrently \"next dev\" \"tailwindcss --input ./src/app/globals.css --output ./src/app/output.css --watch\"",
    "dev:init": "npm run quit-nginx && npm run init-ssl && npm run init-nginx",
    "predev": "npm run dev:init --hostname=arclocal.abouthugo.dev",
    "tw:watch": "tailwindcss --input ./app/globals.css --output ./app/output.css --watch",
    "build": "tailwindcss ./src/app/globals.css --output ./src/app/output.css && next build",
    "start": "next start",
    "-------------------------------[utils]-------------------------------": "",
    "create-env": "printenv > .env.production",
    "lint": "next lint",
    "prepare": "husky install",
    "-------------------------------[ssl & nginx]-------------------------------": "",
    "init-ssl": "./scripts/init_ssl.sh",
    "init-nginx": "./nginx/init-nginx.sh",
    "quit-nginx": "./nginx/quit-nginx.sh",
    "-------------------------------[format]-------------------------------": "",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.0.2",
    "@react-hookz/web": "^24.0.4",
    "@tanstack/react-query": "^5.38.0",
    "class-variance-authority": "^0.7.0",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "gray-matter": "^4.0.3",
    "luxon": "^3.4.4",
    "next": "14.2.3",
    "react": "^18",
    "react-dom": "^18",
    "react-fast-marquee": "^1.6.4",
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.35.6",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css,md}": "prettier --write"
  }
}
